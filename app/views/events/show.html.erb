<div class="title_container">
  <h1>–î–µ—Ç–∞–ª—ñ –ü–æ–¥—ñ—ó</h1>
  <%= link_to '–ù–∞–∑–∞–¥', events_path, class: 'btn btn-custom-color btn-sm', title: '–ù–∞–∑–∞–¥' %>
</div>
<div class="event-container">
  <div class="event-details card mb-3">
    <div class="card-header text-white">
      <h2><%= @event.name %></h2>
    </div>
    <div class="card-body">
      <p class="card-text">
        <strong>–ö–∞—Ç–µ–≥–æ—Ä—ñ—è:</strong>
        <span class="badge badge-info"><%= @event.category.name %></span>
      </p>
      
      <p class="card-text"><%= @event.description %></p>

      <% if @event.event_params.any? %>
        <p class="card-text"><strong>–ü–∞—Ä–∞–º–µ—Ç—Ä–∏ –ø–æ–¥—ñ—ó:</strong></p>
        <ul>
          <% @event.event_params.each do |param| %>
            <li><%= param.name %> - <%= param.description %></li>
          <% end %>
        </ul>
      <% end %>

      <% if @event.attachments.any? %>
        <div class="attachments-section expanded">
          <button class="expand-button btn btn-custom-color" onclick="toggleAttachments()">–í–∫–ª–∞–¥–µ–Ω–Ω—è (<%= @event.attachments.count %>)</button>
          <div class="attachments-content">
            <div class="attachments-slider">
              <button class="slider-nav prev" onclick="scrollAttachments(-1)">&#9664;</button>
              <div class="attachments-list">
                <% @event.attachments.each do |attachment| %>
                  <div class="attachment-item">
                    <%= link_to attachment.filename.to_s, url_for(attachment) %>
                  </div>
                <% end %>
              </div>
              <button class="slider-nav next" onclick="scrollAttachments(1)">&#9654;</button>
            </div>
          </div>
        </div>
      <% end %>

      <div class="platform-dates">
        <div>
          <% if @event.ios_impl %>
            <p class="card-text">
              <i class="fa-brands fa-apple"></i> <strong>–í–ø—Ä–æ–≤–∞–¥–∂–µ–Ω–æ:</strong> <%= @event.ios_impl.strftime("%Y-%m-%d %H:%M:%S") %>
            </p>
          <% end %>
          <% if @event.ios_release %>
            <p class="card-text">
              <i class="fa-brands fa-apple"></i> <strong>–í–∏–ø—É—â–µ–Ω–æ –≤ App Store:</strong> <%= @event.ios_release.strftime("%Y-%m-%d %H:%M:%S") %>
            </p>
          <% end %>
        </div>
        <div>
          <% if @event.android_impl %>
            <p class="card-text">
              <i class="fa-brands fa-android"></i> <strong>–í–ø—Ä–æ–≤–∞–¥–∂–µ–Ω–æ:</strong> <%= @event.android_impl.strftime("%Y-%m-%d %H:%M:%S") %>
            </p>
          <% end %>
          <% if @event.android_release %>
            <p class="card-text">
              <i class="fa-brands fa-android"></i> <strong>–í–∏–ø—É—â–µ–Ω–æ –≤ Play Market:</strong> <%= @event.android_release.strftime("%Y-%m-%d %H:%M:%S") %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="comments-section expanded">
    <button class="expand-button btn btn-custom-color" onclick="toggleComments()">–ö–æ–º–µ–Ω—Ç–∞—Ä—ñ (<%= @event.comments.count %>)</button>
    <div class="comments-content">
      <div class="comments-slider">
        <button class="slider-nav prev" onclick="scrollSlider(-1)">&#9650;</button>
        <div class="comments-list">
          <%= render @event.comments %>
        </div>
        <button class="slider-nav next" onclick="scrollSlider(1)">&#9660;</button>
      </div>
      <div>
        <%= render 'comments/form', commentable: @event, comment: Comment.new %>
      </div>
    </div>
  </div>
</div>

<div>
  <% if current_user.can_open_event_edit? %>
    <%= link_to '‚úèÔ∏è', edit_event_path(@event), class: 'btn btn-custom-color btn-sm', title: '–†–µ–¥–∞–≥—É–≤–∞—Ç–∏' %>
  <% end %>
  <% if current_user.can_delete_event? %>
    <%= link_to 'üóëÔ∏è', event_path(@event), data: { turbo_method: :delete, turbo_confirm: '–í–∏ –≤–ø–µ–≤–Ω–µ–Ω—ñ?' }, class: 'btn btn-custom-color btn-sm', title: '–í–∏–¥–∞–ª–∏—Ç–∏' %>
  <% end %>
</div>
<script>
  function toggleComments() {
    const commentsSection = document.querySelector('.comments-section');
    commentsSection.classList.toggle('expanded');
  }
  function scrollSlider(direction) {
  const slider = document.querySelector('.comments-list');
  const scrollAmount = 300; // –ö—ñ–ª—å–∫—ñ—Å—Ç—å –¥–ª—è –ø—Ä–æ–∫—Ä—É—Ç–∫–∏ –∑–∞ –∫–ª—ñ–∫
  slider.scrollBy({
    top: direction * scrollAmount,
    behavior: 'smooth'
  });
}

</script>